{
  "manifest_version": 3,
  "name": "AI UI/UX Critique",
  "version": "1.0",
  "description": "A Chrome extension that acts as an AI-powered side panel to analyze web pages for accessibility issues, UI/UX improvements, and alternative design suggestions using Gemini.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Open AI UI/UX Critique"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}